{
  "name": "@samwise-tech/search-ql",
  "version": "2.1.0",
  "description": "QL used for advanced searches in Samwise applications",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "build": "rm -rf ./lib && tsc --project tsconfig.publish.json",
    "karma": "karma start config/karma.conf.js",
    "lint": "tslint --project tsconfig.tslint.json --format verbose './src/**/*.ts'",
    "mocha": "mocha --opts ./mocha.opts './src/**/*.spec.ts'",
    "mocha:tdd": "yarn mocha --watch --reporter min",
    "prepublishOnly": "yarn build",
    "test": "yarn check --integrity && yarn lint && yarn test-specs-for-only && yarn mocha && yarn karma && yarn build",
    "test-specs-for-only": "forbidden 'src/**/*.spec.ts' -p describe.only it.only"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/samwise-tech/search-ql.git"
  },
  "keywords": [
    "ql",
    "searchql"
  ],
  "author": "Technology Concepts & Design, Inc.",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/samwise-tech/search-ql/issues"
  },
  "homepage": "https://github.com/samwise-tech/search-ql#readme",
  "engines": {
    "node": ">=8",
    "npm": ">=5",
    "yarn": ">=1"
  },
  "dependencies": {
    "@samwise-tech/core": "^1.2.5",
    "@samwise-tech/immutable": "^1.1.1",
    "@types/parsimmon": "^1.6.2",
    "parsimmon": "^1.7.3"
  },
  "devDependencies": {
    "@samwise-tech/forbidden-patterns": "1.0.3",
    "@samwise-tech/tslint-config": "1.0.5",
    "@types/chai": "4.1.3",
    "@types/lodash": "4.14.108",
    "@types/mocha": "5.2.0",
    "@types/node": "10.0.8",
    "chai": "4.1.2",
    "circular-dependency-plugin": "5.0.2",
    "core-js": "2.5.6",
    "immutable": "^3.8.2",
    "karma": "2.0.2",
    "karma-chai": "0.1.0",
    "karma-chrome-launcher": "2.2.0",
    "karma-firefox-launcher": "1.1.0",
    "karma-mocha": "1.3.0",
    "karma-mocha-reporter": "2.2.5",
    "karma-webpack": "3.0.0",
    "lodash": "4.17.10",
    "mocha": "5.1.1",
    "monet": "0.9.0-alpha.4",
    "ts-loader": "4.3.0",
    "ts-node": "6.0.3",
    "tslib": "1.9.0",
    "tslint": "5.10.0",
    "typescript": "2.8.3",
    "webpack": "4.8.1"
  },
  "peerDependencies": {
    "immutable": "^3.8.0",
    "monet": "0.9.0-alpha.4"
  }
}
