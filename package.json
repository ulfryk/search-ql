{
  "name": "@samwise-tech/search-ql",
  "version": "1.0.0",
  "description": "QL used for advanced searches in Samwise applications",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "build": "rm -rf ./lib && node_modules/.bin/tsc --project tsconfig.publish.json",
    "karma": "node_modules/.bin/karma start config/karma.conf.js",
    "lint": "node_modules/.bin/tslint --project tsconfig.tslint.json --format verbose './src/**/*.ts'",
    "mocha": "node_modules/.bin/mocha --opts ./mocha.opts './src/**/*.spec.ts'",
    "prepublish": "yarn build",
    "test": "yarn outdated && yarn check --integrity && yarn lint && yarn test-specs-for-only && yarn mocha && yarn karma && yarn build",
    "test-specs-for-only": "node_modules/.bin/forbidden 'src/**/*.spec.ts' -p describe.only it.only"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/samwise-tech/search-ql.git"
  },
  "keywords": [
    "ql",
    "searchql"
  ],
  "author": "Samwise Technology, Inc. <icunningham@samwise.tech>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/samwise-tech/search-ql/issues"
  },
  "homepage": "https://github.com/samwise-tech/search-ql#readme",
  "engines": {
    "node": ">=6"
  },
  "dependencies": {
    "@samwise-tech/core": "^1.0.0",
    "@types/parsimmon": "1.6.1",
    "parsimmon": "1.6.2"
  },
  "devDependencies": {
    "@samwise-tech/forbidden-patterns": "1.0.1",
    "@samwise-tech/immutable": "^1.0.0",
    "@samwise-tech/tslint-config": "1.0.1",
    "@types/chai": "4.0.10",
    "@types/lodash": "4.14.91",
    "@types/mocha": "2.2.45",
    "@types/node": "8.5.2",
    "chai": "4.1.2",
    "circular-dependency-plugin": "4.3.0",
    "core-js": "2.5.3",
    "immutable": "^3.8.0",
    "karma": "2.0.0",
    "karma-chai": "0.1.0",
    "karma-mocha": "1.3.0",
    "karma-mocha-reporter": "2.2.5",
    "karma-phantomjs-launcher": "1.0.4",
    "karma-webpack": "2.0.9",
    "lodash": "4.17.4",
    "mocha": "4.0.1",
    "monet": "0.9.0-alpha.4",
    "ts-loader": "3.2.0",
    "ts-node": "4.1.0",
    "tslib": "1.8.1",
    "tslint": "5.8.0",
    "typescript": "2.6.2",
    "webpack": "3.10.0"
  },
  "peerDependencies": {
    "@samwise-tech/immutable": "^1.0.0",
    "immutable": "^3.8.0",
    "monet": "0.9.0-alpha.4"
  }
}
